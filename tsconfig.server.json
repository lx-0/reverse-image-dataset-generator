{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/**/*",
    "client/src/lib/models.ts",
    "client/src/lib/types.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
